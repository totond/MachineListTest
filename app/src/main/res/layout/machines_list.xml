<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y36"
        android:background="@color/colorShitYellow"
        android:id="@+id/Goodslist_search">


            <ImageView
                android:id="@+id/Goodslist_backbtn"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/y16"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginStart="@dimen/x12"
                android:background="@mipmap/back"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注塑机列表页"
                android:textSize="@dimen/x22"
                android:textColor="@color/colorBrown"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/Goodslist_etSearch"/>
        </RelativeLayout>





    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Goodslist_RecyclerView">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>